<link href="/css/style.css" rel="stylesheet">
<link href="/css/addlisting.css" rel="stylesheet">
<link href="/css/roompage.css" rel="stylesheet">
      <%- include('./partials/bootstrap_link.ejs')%>
      <%- include('./partials/_script.ejs')%>
  
</head>

<body>

  <!-- Header Section  -->
  <%- include('./partials/header.ejs')%>

    <!-- ======= Portfolio Section ======= -->
    <section class="portfolio" id="portfolio">

      <div class="container text-center">
        <h2>
          Indore's Prime Locations
        </h2>

        <p style="color: white;">
          Voluptua scripserit per ad, laudem viderer sit ex. Ex alia corrumpit voluptatibus usu, sed unum convenire id.
          Ut cum nisl moderatius, Per nihil dicant commodo an.
        </p>
      </div>
      </div>
    </section><!-- End Portfolio Section -->


    <!-- ========================================================================================================= -->


    <!-- ========================== Popular Courses Section =============================== -->
    <section id="popular-courses" class="courses">
      <div class="container">

        <div class="section-title">
          <h2>Check Out Indore Rooms</h2>
        </div>

        <div class="container py-3">
          <!-- Card Start -->
          <%houseList.forEach((data,index)=>{%>
              <div class="row ">
                <div class="row" id="middle" style="box-shadow:1px 1px 1px 2px rgb(144, 142, 142)">
                  <div class="col-md-6">
                    <div class="card-body">
                        
                            <center>  <table >
                                <tr>
                                    <td><img height="40px" width="40px" src="https://bootdey.com/img/Content/avatar/avatar7.png"> 
                                        <strong>
                                          <%lister.forEach(detail=>{%>
                                            <%if(data.userEmailId==detail.email){%>
                                              <%=detail.name%>
                                                <%}})%>
                                        </strong>
                                    </td>
                                    <!-- <center><td>Parul Sahu</td></center> -->
                                </tr>
                                  <tr><td colspan="3"><img height="20" width="20" src="data:image/png;base64,">
                                    <%=data.houseAddress%></td></tr>
                                  <tr>
                                       <td><strong>Rent :</strong><br><%=data.houseRent%> Rs.</td>
                                       <td><b>looking for :</b><br><%=data.gender%> </td>
                                       <td></td>
                                  </tr>
                                  <tr>
                                        <td><b>House description :</b><%=data.houseDescription%></td>
                                  </tr>
                                  <tr> <td colspan="3"><center><button type="button" id="modal" class="btn btn-primary" data-toggle="modal"
                                    data-target="#staticBackdrop<%=index%>">
                                    View more info
                                  </button>
                                
                                </center></td></tr>
                                  
                              </table></center>
                              <div>
                                <div class="modal" id="staticBackdrop<%=index%>" data-backdrop="static" data-keyboard="false"
                                  tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                  <div class="modal-dialog" id="const">
                                    <div class="modal-content" id="cont">
                                      <div class="modal-header">
                                        <h5 class="modal-title" id="staticBackdropLabel">
                                          <font style="color:rgb(19, 243, 236)">Dekh</font>Mate
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                          <span aria-hidden="true">&times;</span>
                                        </button>
                                      </div>
                                      <div class="modal-body">
                                        <!-- --------------------------------------------------------------------- -->
                                        <div class="row">
                                          <!-- ----------------------------------------image slider----------------------------- -->
                                          <div class=" col-sm-6 col-lg-6">
                                            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                              <div class="carousel-inner" id="slider">
                                                <div class="carousel-item active">
                                                  <img
                                                    src="https://media.designcafe.com/wp-content/uploads/2021/09/15180410/pop-ceiling-designs-for-hall.jpg"
                                                    class="d-block w-100" alt="...">
                                                </div>
                                                <div class="carousel-item">
                                                  <img
                                                    src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQckNogMdC4Mr1lPnOzcEpqVqnkQwjjIh_MUA&usqp=CAU"
                                                    class="d-block w-100" alt="...">
                                                </div>
                                                <div class="carousel-item">
                                                  <img
                                                    src="https://images.unsplash.com/photo-1556911220-bff31c812dba?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8a2l0Y2hlbnxlbnwwfHwwfHw%3D&w=1000&q=80"
                                                    class="d-block w-100" alt="...">
                                                </div>
                                              </div>
                                            </div>
                                          </div>
                                          <!---------------------------Room details------------------------------------------>
                                          <div class="col-lg-6" id="roomD1">
                                            <p id="roomDis"></b><%=data.houseDescription%></p>
                                          </div>
                                        </div>
                                        <hr>
                                        <!-- -------------------------------------second row details----------------------------------------------- -->
                                        <div class="row">
                                          <div class="col-sm-8"style="width: auto;">
                                            <table border="0" >
                                              <tr>
                                                <td><b>Name</b></td>
                                                <td>:</td>
                                                <td>   
                                                  <%lister.forEach(detail=>{%>
                                                    <%if(data.userEmailId==detail.email){%>
                                                     <%=detail.name%>
                                                       <%}})%></td>
                                              </tr>
                                              <tr>
                                                <td><b>House Rent </b></td>
                                                <td>:</td>
                                                <td><%=data.houseRent%>  Rs.</td>
                                              </tr>
                                              <tr>
                                                <td><b>Searching for</b></td>
                                                <td>:</td>
                                                <td><%=data.gender%></td>
                                              </tr>
                                              <tr>
                                                <td><b>House Address</b></td>
                                                <td>:</td>
                                                <td><%=data.houseAddress%></td>
                                              </tr>
                            
                                            </table>
                                          </div>
                                          
                                            <form>
                                              <div class="mb-3">
                                                <label for="recipient-name" class="col-form-label">Recipient:</label>
                                                <input type="text" class="form-control" id="Email" value="<%=data.userEmailId%>" placeholder="<%=data.userEmailId%>" >
                                              </div>
                                              <div class="mb-3">
                                                <label for="message-text" class="col-form-label">Message:</label>
                                                <textarea class="form-control" id="message-text"></textarea>
                                              </div>
                                              <div class="mb-3">
                                                <button type="submit">Send email</button>
                                              </div>

                                            </form>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                    </div>
                  </div>
                  <div class="col-md-5">
                    <div id="cor<%=index%>" class="carousel slide" data-ride="carousel">
                      <div class="carousel-inner">
                        <div class="carousel-item active" data-interval="10000">
                          <img src="/uploads/<%=data.houseImage1%>" height="300px" width="300px" class="d-block w-100"
                            alt="..." style="padding-top : 100px">
                        </div>
                        <div class="carousel-item" data-interval="2000">
                          <img src="/uploads/<%=data.houseImage2%>" height="300px" width="300px" class="d-block w-100"
                            alt="..." style="padding-top : 100px">
                        </div>
                        <div class="carousel-item">
                          <img src="/uploads/<%=data.houseImage3%>" height="300px" width="300px" class="d-block w-100"
                            alt="..." style="padding-top : 100px">
                        </div>
                      </div>
                      <button class="carousel-control-prev" type="button" data-target="#cor<%=index%>" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only"><</span>
                      </button>
                      <button class="carousel-control-next" type="button" data-target="#cor<%=index%>" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">></span>
                      </button>
                    </div><!-- End of carousel -->
                  </div>
                </div>
              </div><!-- End of card -->
          
            <%})%>
    </section>
    <!-- =================================== Popular Courses Section ends ======================================== -->

    </main><!-- End #main -->
    <%- include('./partials/_footer.ejs')%>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <%- include('./partials/_script.ejs')%>
</body>

</html>